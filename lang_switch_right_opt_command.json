{
  "title": "Lang switch one key (r3)",
    "maintainers": [
    "holovin"
  ],
  "rules": [
    {
      "description": "[LSOK] Right CMD to en",
      "manipulators": [
        {
          "from": {
            "key_code": "right_command"
          },
          "to_if_alone": [
            {
              "select_input_source": {
                "language": "en",
                "input_source_id": "org.sil.ukelele.keyboardlayout.t.english-ilyabirmantypography"
              }
            }
          ],
          "to": [
            {
              "key_code": "right_command"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "[LSOK] Right Opt -> ru",
      "manipulators": [
        {
          "from": {
            "key_code": "right_option"
          },
          "to_if_alone": [
            {
              "select_input_source": {
                "language": "ru",
                "input_source_id": "org.sil.ukelele.keyboardlayout.t.russian-ilyabirmantypography"
              }
            }
          ],
          "to": [
            {
              "key_code": "right_option"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
